<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>Spooky_Hunt.Hack_O_Ween</groupId>
    <artifactId>Spooky_Hunt</artifactId>
    <version>1.0</version>

    <properties>
        <maven.compiler.source>20</maven.compiler.source>
        <maven.compiler.target>20</maven.compiler.target>
        <javafx.version>20.0.2</javafx.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <!-- Shade plugin to make a fat JAR -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>Spooky_Hunt.Hack_O_Ween.spooky_hunt</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- JPackage plugin for creating EXE with runtime -->
            <plugin>
                <groupId>org.panteleyev</groupId>
                <artifactId>jpackage-maven-plugin</artifactId>
                <version>1.5.1</version>
                <configuration>
                    <input>${project.build.directory}</input>
                    <destination>${project.build.directory}/dist</destination>
                    <name>Spooky_Hunt</name>
                    <mainJar>${project.build.finalName}-shaded.jar</mainJar>
                    <mainClass>Spooky_Hunt.Hack_O_Ween.spooky_hunt</mainClass>
                    <type>app-image</type>
                    <appVersion>${project.version}</appVersion>
                    <winConsole>true</winConsole> <!-- keep console to see errors -->
                    <runtimeImage>${project.build.directory}/runtime</runtimeImage>
                    <javaOptions>
                        <javaOption>--add-modules</javaOption>
                        <javaOption>javafx.controls,javafx.fxml</javaOption>
                    </javaOptions>
                </configuration>
                <executions>
                    <execution>
                        <id>package-with-runtime</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jpackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
